<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="3dp"
            android:layout_margin="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/order_no_my_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROGRESS/22/000000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/order_tracking_card"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/dark_yellow"
                    android:fontFamily="@font/patua_one"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/order_tracking_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="3dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:cardBackgroundColor="@color/back_color">

                    <TextView
                        android:id="@+id/order_tracking_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PLACED"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_margin="2dp"
                        android:padding="3dp"
                        android:textColor="@color/dark_yellow"
                        android:fontFamily="@font/patua_one"/>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_yellow"
                android:layout_marginTop="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/delivery_address_my_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="243/1,Senpara, Mirpur,Dhaka"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:textSize="15sp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/patua_one"/>

                    <TextView
                        android:id="@+id/order_date_my_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Date: 15-JUN-22"
                        android:textStyle="bold"
                        android:layout_margin="2dp"
                        android:textSize="13sp"
                        android:fontFamily="@font/cantora_one"/>

                    <TextView
                        android:id="@+id/delivery_date_my_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Delivery Date: 22-JUN-22"
                        android:textStyle="bold"
                        android:layout_margin="2dp"
                        android:textSize="13sp"
                        android:fontFamily="@font/cantora_one"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/total_price_of_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="à§³ 200"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:textSize="15sp"
                        android:textColor="@color/primary_variant_second"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/patua_one"/>
                </LinearLayout>

            </LinearLayout>








        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>