<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login.Login">

    <LinearLayout
        android:id="@+id/login_full_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@color/dark_yellow"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:background="@drawable/design2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/terrain_shop_icon"
                android:layout_margin="20dp"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5"
            app:cardElevation="3dp"
            android:layout_marginTop="5dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_22sdp"
                        android:text="LOGIN"
                        android:textStyle="bold"
                        android:textColor="@color/primary_variant_second"
                        android:gravity="start"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/russo_one"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12sdp"
                        android:text="Login to continue"
                        android:textStyle="bold"
                        android:fontFamily="@font/patua_one"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/mobile_number_log_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        app:boxStrokeColor="@color/primary_variant_second"
                        app:boxStrokeWidth="2dp"
                        app:hintTextColor="#b2bec3"
                        android:textColorHint = "#b2bec3"
                        app:helperTextEnabled="true"
                        app:helperText=""
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/mobile_number_given_log_in"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:text=""
                            android:textColor="@color/black"
                            android:inputType="phone"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/password_log_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        app:boxStrokeColor="@color/primary_variant_second"
                        app:boxStrokeWidth="2dp"
                        app:hintTextColor="#b2bec3"
                        android:textColorHint = "#b2bec3"
                        app:endIconMode="password_toggle"
                        app:endIconTint="#636e72"
                        app:helperTextEnabled="true"
                        app:helperText=""
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/password_given_log_in"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:text=""
                            android:imeOptions="actionDone"
                            android:textColor="@color/black"
                            android:inputType="textPassword"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="start">
                        <CheckBox
                            android:id="@+id/remember_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:layout_gravity="start"
                            android:text="Remember Me"
                            android:textColor="@color/primary_variant_second"
                            android:buttonTint="@color/primary_second"
                            android:gravity="center"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/email_pass_miss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textColor="@android:color/holo_red_light"
                        android:textStyle="bold"
                        android:text="The User Name and Password did not match"/>

                    <Button
                        android:id="@+id/log_in_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:text="LOGIN"
                        android:fontFamily="@font/russo_one"
                        android:background="@drawable/custom_button"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        app:backgroundTint="@null"
                        />

                    <TextView
                        android:id="@+id/forgot_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_variant_second"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        android:text="Forgot Account?"
                        android:gravity="center"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/patua_one"
                        android:layout_gravity="bottom"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:text="Don't have an account?"
                        android:gravity="center"
                        android:layout_gravity="bottom"/>
                    <TextView
                        android:id="@+id/sign_up_text"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sign up"
                        android:fontFamily="@font/bungee"
                        android:textSize="@dimen/_12sdp"
                        android:layout_gravity="bottom"
                        android:textStyle="bold"
                        android:textColor="@color/primary_variant_second"
                        android:gravity="center"/>


                </LinearLayout>
            </ScrollView>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_indicator_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true"
        android:layout_gravity="center"/>

</RelativeLayout>



