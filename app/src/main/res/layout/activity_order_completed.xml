<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".orderComplete.OrderCompleted">

    <RelativeLayout
        android:id="@+id/order_completed_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/close_logo_order_completed"
            android:layout_centerVertical="true"
            android:src="@drawable/close_24"
            app:tint="@color/primary_variant_second" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/close_logo_order_completed"
            android:fontFamily="@font/patua_one"
            android:text="ORDER COMPLETED"
            android:textColor="@color/primary_variant_second"
            android:textSize="18sp" />



    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/order_completed_action_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_yellow"
        android:orientation="vertical"/>


    <ImageView
        android:id="@+id/yes_image_order_complete"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/order_completed_action_bar"
        android:layout_marginTop="50dp"
        android:src="@drawable/yes_icon"/>

    <TextView
        android:id="@+id/thank_you_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank You"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/yes_image_order_complete"
        android:fontFamily="@font/patua_one"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/dark_yellow"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/order_text_succ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your order has been placed successfully"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/thank_you_text"
        android:fontFamily="@font/roboto_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/order_text_succ"
        android:layout_marginTop="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Order No :"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/dark_yellow"
                android:fontFamily="@font/patua_one"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/order_no_text_oc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Progress/22/000010"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:fontFamily="@font/patua_one"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Delivery Address :"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/dark_yellow"
                android:fontFamily="@font/patua_one"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/delivery_address_oc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Progress/22/000010"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:fontFamily="@font/patua_one"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Delivery Date :"
                android:layout_weight="5"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/dark_yellow"
                android:fontFamily="@font/patua_one"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/delivery_date_oc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Progress/22/000010"
                android:gravity="end"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:fontFamily="@font/patua_one"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can see your order details at 'MY ORDERS' section "
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto_bold"/>



    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/order_more_button_o_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="ORDER MORE"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/patua_one"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/dark_yellow"
        android:enabled="true"/>





</RelativeLayout>