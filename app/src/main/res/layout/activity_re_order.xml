<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".adminlogin.reports.reorder.ReOrder">

    <RelativeLayout
        android:id="@+id/re_order_design_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/re_order_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:padding="16dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/re_order_back_logo"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_back_24"
                app:tint="@color/primary_variant_second" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/re_order_back_logo"
                android:fontFamily="@font/patua_one"
                android:text="RE-ORDER"
                android:textColor="@color/primary_variant_second"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/re_order_action_bar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_yellow"
            android:orientation="vertical"/>

        <RelativeLayout
            android:id="@+id/re_order_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/re_order_action_bar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/_4sdp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:weightSum="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="2.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight=".5"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/white">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/primary_variant_second">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/spinner_layout_cat_re_order"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    app:boxCornerRadiusTopStart="10dp"
                                    app:boxCornerRadiusTopEnd="10dp"
                                    app:boxCornerRadiusBottomEnd="10dp"
                                    app:boxCornerRadiusBottomStart="10dp"
                                    app:boxBackgroundColor="@color/white"
                                    app:boxBackgroundMode="filled"
                                    app:endIconMode="dropdown_menu"
                                    app:boxStrokeWidth="0dp"
                                    android:hint="Category"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                    >

                                    <com.rosemaryapp.amazingspinner.AmazingSpinner
                                        android:id="@+id/cat_type_spinner_re_order"
                                        style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                                        android:layout_width="match_parent"
                                        android:text=""
                                        android:layout_height="wrap_content"
                                        />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2.5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight=".5"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/white">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/primary_variant_second">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/spinner_layout_sub_cat_re_order"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="1dp"
                                    app:boxCornerRadiusTopStart="10dp"
                                    app:boxCornerRadiusTopEnd="10dp"
                                    app:boxCornerRadiusBottomEnd="10dp"
                                    app:boxCornerRadiusBottomStart="10dp"
                                    app:boxBackgroundColor="@color/white"
                                    app:boxBackgroundMode="filled"
                                    app:endIconMode="dropdown_menu"
                                    app:boxStrokeWidth="0dp"
                                    android:hint="Sub Category"
                                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                    >

                                    <com.rosemaryapp.amazingspinner.AmazingSpinner
                                        android:id="@+id/sub_cat_type_spinner_re_order"
                                        style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                                        android:layout_width="match_parent"
                                        android:text=""
                                        android:layout_height="wrap_content"
                                        />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/after_selecting_sub_category_re_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/darker_gray"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginBottom="2.5dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="2dp"
                                    app:cardBackgroundColor="@color/white">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/primary_variant_second">

                                        <com.google.android.material.textfield.TextInputLayout
                                            android:id="@+id/search_item_name_lay_re_order"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="1dp"
                                            android:hint="Search Item"
                                            app:boxBackgroundColor="@color/white"
                                            app:boxCornerRadiusTopEnd="10dp"
                                            app:startIconDrawable="@drawable/search_24"
                                            app:startIconTint="@color/cardview_dark_background"
                                            app:boxCornerRadiusTopStart="10dp"
                                            app:boxCornerRadiusBottomStart="10dp"
                                            app:boxCornerRadiusBottomEnd="10dp"
                                            app:boxStrokeWidthFocused="1dp"
                                            app:boxStrokeWidth="0dp"
                                            app:helperText=""
                                            app:boxStrokeColor="@color/primary_variant_second"
                                            app:helperTextEnabled="true"
                                            android:textColorHint="#b2bef2">

                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/search_item_name_re_order"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:ems="10"
                                                android:imeOptions="actionSearch"
                                                android:inputType="text"
                                                android:textColor="#636e72"
                                                android:textStyle="bold" />

                                        </com.google.android.material.textfield.TextInputLayout>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="5dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="5dp"
                                    android:weightSum="1.5">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Item Name"
                                        android:gravity="center"
                                        android:textSize="12sp"
                                        android:padding="2dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/primary_variant_second"
                                        android:layout_weight=".45"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Unit"
                                        android:gravity="center"
                                        android:textSize="12sp"
                                        android:padding="2dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/primary_variant_second"
                                        android:layout_weight=".15"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Color"
                                        android:gravity="center"
                                        android:padding="2dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/primary_variant_second"
                                        android:textSize="12sp"
                                        android:layout_weight=".2"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Re-Order Quantity"
                                        android:gravity="center"
                                        android:padding="2dp"
                                        android:textStyle="bold"
                                        android:textColor="@color/primary_variant_second"
                                        android:textSize="12sp"
                                        android:layout_weight=".4"/>
                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:text="Stock Quantity"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:padding="2dp"
                                        android:textColor="@color/primary_variant_second"
                                        android:textSize="12sp"
                                        android:layout_weight=".3"/>

                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@android:color/darker_gray"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/item_overview_relation_re_order"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:descendantFocusability="beforeDescendants"
                                        android:focusable="true"
                                        android:focusableInTouchMode="true"
                                        android:scrollbars="vertical"
                                        android:layout_margin="5dp"/>
                                </RelativeLayout>




                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_indicator_re_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>