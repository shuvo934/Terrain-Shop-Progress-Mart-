<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"

    android:layout_marginTop="5dp"
    android:background="@color/back_color">

    <TextView
        android:id="@+id/serial_no_item_stock"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="SL NO"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_gravity="center"

        android:layout_marginEnd="5dp"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/category_name_item_stock"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Category"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="12sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/sub_category_name_item_stock"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Sub Category"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textSize="12sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/item_reference_name_item_stock"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Item Name"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/item_code_item_stock"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Item Code"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/item_unit_item_stock"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Unit"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_qty_item_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_vat_amnt_item_stock"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="VAT(%)"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/item_purchase_amount_item_stock"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Purchase Amount"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/item_sales_price_item_stock"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Sales Price"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/item_hs_code_item_stock"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="HS Code"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12sp"
        />


</LinearLayout>