<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp">

    <ImageView
        android:id="@+id/order_details_item_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/hero_2"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/order_history_details_item_qty" />

    <TextView
        android:id="@+id/order_history_details_item_qty"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="20x"
        android:textStyle="bold"
        android:gravity="start"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:fontFamily="@font/patua_one"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/order_details_item_image"
        android:padding="4dp"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_history_details_item_name_with_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KITKAT KHAO MOJA PAO"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:fontFamily="@font/patua_one"/>
            <TextView
                android:id="@+id/order_history_details_item_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 Pcs"
                android:layout_marginStart="0dp"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:textSize="11sp"
                android:fontFamily="@font/patua_one"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/patua_one"/>

                <TextView
                    android:id="@+id/order_history_details_item_card_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="৳ 15"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/patua_one"/>

                <TextView
                    android:id="@+id/order_history_details_item_real_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="৳ 15"
                    android:layout_marginStart="5dp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:textSize="11sp"
                    android:fontFamily="@font/patua_one"/>

            </LinearLayout>





        </LinearLayout>

        <TextView
            android:id="@+id/order_history_details_item_total_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="2000"
            android:textStyle="bold"
            android:gravity="center|end"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:fontFamily="@font/patua_one"/>

    </LinearLayout>

</RelativeLayout>
