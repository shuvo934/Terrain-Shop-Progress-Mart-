    <TextView
        android:id="@+id/no_district_msg_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select above field"
        android:visibility="gone"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="30dp"
        android:textSize="12sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="5dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/spinner_layout_thana_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                app:boxStrokeColor="@color/primary_variant_second"
                app:boxStrokeWidth="1dp"
                app:hintTextColor="#b2bec3"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                android:textColorHint = "#b2bec3"
                app:boxBackgroundColor="@color/white"
                app:boxBackgroundMode="filled"
                app:endIconMode="dropdown_menu"
                android:hint="@string/loc"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                >

                <com.rosemaryapp.amazingspinner.AmazingSpinner
                    android:id="@+id/thana_spinner_checkout"
                    style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:text=""
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

