        android:layout_marginStart="25dp"
        android:layout_marginEnd="30dp"
        android:textSize="12sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="5dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/delivery_address_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/checkout_delivery_address_hint"
        app:boxStrokeColor="@color/primary_variant_second"
        app:boxStrokeWidth="1dp"
        app:hintTextColor="#b2bec3"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        android:textColorHint = "#b2bec3"
        app:helperTextEnabled="true"
        app:helperText=""
        app:helperTextTextColor="@android:color/holo_red_dark"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/delivery_address_given_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=""
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:imeOptions="actionDone"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/radio_button_for_delivery_address_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Same as User Address"
        android:textColor="@color/status_bar_color"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"
        android:checked="false"
        app:buttonTint="@color/primary_second"
        android:fontFamily="@font/roboto_bold"
        style="@style/Widget.Material3.CompoundButton.CheckBox"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/billing_address_checkout"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:hint="@string/chekout_billing_address_hint"
        app:boxStrokeColor="@color/primary_variant_second"
        app:boxStrokeWidth="1dp"
        android:layout_marginTop="5dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:hintTextColor="#b2bec3"
        android:textColorHint = "#b2bec3"
        app:helperTextEnabled="true"
        app:helperText=""
        app:helperTextTextColor="@android:color/holo_red_dark"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/billing_address_given_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=""
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/radio_button_for_billing_address_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Same as User Address"
        android:textColor="@color/status_bar_color"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="12sp"
        android:checked="false"
        app:buttonTint="@color/primary_second"
        android:fontFamily="@font/roboto_bold"
        style="@style/Widget.Material3.CompoundButton.CheckBox"/>

</LinearLayout>