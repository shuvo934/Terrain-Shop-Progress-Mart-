<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_weight=".7"
        android:layout_height="wrap_content"
        android:id="@+id/listTitle"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textAppearance="@style/NavigationTabTextAppeareance"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:paddingRight="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textColor="@color/primary_variant_second"
        android:textSize="@dimen/_9sdp"/>

    <ImageView
        android:id="@+id/arrow_of_group"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight=".3"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_arrow_right_24"/>


</LinearLayout>